<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ppw_pdf_vew_fl_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:ignore="ResourceName">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">
        <ProgressBar
            android:id="@+id/pb_loading"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_alignParentTop="true"
            android:max="100"
            android:progressDrawable="@drawable/brvah_sample_footer_loading_progress"
            />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <com.github.barteksc.pdfviewer.PDFView
                android:id="@+id/pdfView"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
            <com.cy.necessaryview.shapeview.RecShapeTextView
                android:id="@+id/tv_page"
                android:layout_width="60dp"
                android:layout_height="32dp"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:textColor="@color/common_white"
                android:textSize="15sp"
                app:radiusBottomRight="16dp"
                app:radiusTopRight="16dp"
                app:colorFill="#80000000"
                tools:text="15/30">
            </com.cy.necessaryview.shapeview.RecShapeTextView>
        </RelativeLayout>
    </LinearLayout>
</FrameLayout>