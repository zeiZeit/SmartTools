<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/ll_root"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:background="@drawable/common_item_file_bg"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingLeft="12dp"
    android:paddingRight="12dp"
    android:layout_marginBottom="10dp"
    >

    <TextView
        android:id="@+id/tv_file_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:textColor="@color/common_text_main"
        android:text="111"
        android:layout_marginTop="17dp"
        android:layout_marginBottom="17dp"
        android:layout_weight="1"
        />

    <ImageView
        android:id="@+id/iv_arrow_right"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/common_arrow_right"
        />

    <com.smw.common.views.SmoothCheckBox
        android:id="@+id/scb_check"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginLeft="6dp"
        app:color_checked="@color/common_accent_blue"
        app:color_tick="@color/common_white"
        app:color_unchecked="@color/common_white"
        app:stroke_width="1dp"
        app:color_unchecked_stroke="@color/common_ccc"
        android:visibility="gone"
        />

</LinearLayout>