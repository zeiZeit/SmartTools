<?xml version="1.0" encoding="utf-8"?>
<com.cy.necessaryview.shapeview.RecShapeLinearLayout xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ll_root"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingLeft="12dp"
    android:paddingRight="12dp"
    android:layout_marginBottom="10dp"
    app:colorFill="@color/common_f8"
    app:radiusCorner="8dp"
    android:orientation="vertical"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginTop="17dp"
        android:layout_marginBottom="10dp">
        <TextView
            android:id="@+id/tv_file_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="@color/common_text_main"
            android:text="合同"
            android:layout_weight="1"
            />

        <TextView
            android:id="@+id/tv_sign_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="去签署"
            android:textSize="14sp"
            android:textColor="@color/common_accent_blue"
            android:gravity="center_vertical"
            />
        <ImageView
            android:id="@+id/iv_arrow"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:src="@drawable/common_arrow_right"
            android:tint="@color/common_accent_blue"
            tools:ignore="UseAppTint" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="17dp">
        <TextView
            android:id="@+id/tv_update_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="13sp"
            android:textColor="@color/common_666"
            android:text="xx"
            android:layout_weight="1"
            />
        <TextView
            android:id="@+id/tv_now_user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="13sp"
            android:textColor="@color/common_666"
            android:text=""
            />
    </LinearLayout>


</com.cy.necessaryview.shapeview.RecShapeLinearLayout>