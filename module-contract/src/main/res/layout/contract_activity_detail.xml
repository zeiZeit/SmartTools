<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:ignore="ResourceName"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/common_bg_window_grep"
        >

        <LinearLayout
            android:id="@+id/ll_top"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center_vertical"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:background="@color/common_white"
            >

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/common_arrow_left"
                />

            <com.smw.common.views.MediumTextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:text="电子合同详情"
                android:textColor="@color/common_text_main"
                android:textSize="17sp"
                android:gravity="center"
                />

            <TextView
                android:layout_width="20dp"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="@color/common_accent_blue"
                />

        </LinearLayout>

        <FrameLayout
            android:id="@+id/rl_root"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >

            <androidx.core.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:paddingLeft="12dp"
                    android:paddingRight="12dp"
                    android:paddingTop="10dp"
                    >

                    <com.cy.necessaryview.shapeview.RecShapeLinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        app:colorFill="#1C87FB"
                        app:radiusCorner="8dp"
                        android:paddingLeft="12dp"
                        android:paddingRight="12dp"
                        >
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:gravity="center_vertical"
                            android:layout_marginTop="20dp"
                            android:layout_marginBottom="20dp"
                            >
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical">
                                <com.smw.common.views.MediumTextView
                                    android:id="@+id/tv_contract_name"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:textColor="@color/common_white"
                                    android:textSize="18sp"
                                    android:text="---合同"
                                    />

                                <com.cy.necessaryview.shapeview.RecShapeTextView
                                    android:id="@+id/tv_status"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/common_white"
                                    android:textSize="13sp"
                                    android:text="签署中"
                                    app:strokeWidth="0.5dp"
                                    app:strokeColor="@color/common_white"
                                    app:radiusCorner="4dp"
                                    android:paddingLeft="5dp"
                                    android:paddingRight="5dp"
                                    android:paddingTop="1dp"
                                    android:paddingBottom="1dp"
                                    />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_marginTop="15dp">

                                <ImageView
                                    android:id="@+id/iv_head"
                                    android:layout_width="50dp"
                                    android:layout_height="50dp"
                                    android:layout_centerHorizontal="true"
                                    android:layout_marginRight="10dp"/>


                                <View
                                    android:layout_width="1dp"
                                    android:layout_height="match_parent"
                                    android:background="@color/common_white"/>
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical"
                                    android:layout_marginLeft="12dp">
                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:orientation="horizontal"
                                        android:gravity="bottom">

                                        <TextView
                                            android:layout_width="100dp"
                                            android:layout_height="wrap_content"
                                            android:text="创建者："
                                            android:textColor="@color/common_white"
                                            android:textSize="13sp"
                                            />
                                        <TextView
                                            android:id="@+id/tv_creator"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:text="某某某"
                                            android:textColor="@color/common_white"
                                            android:textSize="13sp"
                                            android:gravity="right"
                                            />
                                    </LinearLayout>
                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:orientation="horizontal"
                                        android:gravity="bottom"
                                        android:layout_marginTop="8dp">

                                        <TextView
                                            android:layout_width="100dp"
                                            android:layout_height="wrap_content"
                                            android:text="创建时间："
                                            android:textColor="@color/common_white"
                                            android:textSize="13sp"
                                            />
                                        <TextView
                                            android:id="@+id/tv_create_time"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:text="0000-00-00"
                                            android:textColor="@color/common_white"
                                            android:textSize="13sp"
                                            android:gravity="right"
                                            />
                                    </LinearLayout>
                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:orientation="horizontal"
                                        android:gravity="bottom"
                                        android:layout_marginTop="8dp">

                                        <TextView
                                            android:layout_width="100dp"
                                            android:layout_height="wrap_content"
                                            android:text="最后修改时间："
                                            android:textColor="@color/common_white"
                                            android:textSize="13sp"
                                            />
                                        <TextView
                                            android:id="@+id/tv_update_time"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:text="0000-00-00"
                                            android:textColor="@color/common_white"
                                            android:textSize="13sp"
                                            android:gravity="right"
                                            />
                                    </LinearLayout>
                                </LinearLayout>
                            </LinearLayout>

                        </LinearLayout>
                    </com.cy.necessaryview.shapeview.RecShapeLinearLayout>

                    <com.cy.necessaryview.shapeview.RecShapeLinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        app:colorFill="@color/common_white"
                        app:radiusCorner="8dp"
                        android:paddingLeft="12dp"
                        android:paddingRight="12dp"
                        android:paddingTop="20dp"
                        android:paddingBottom="20dp"
                        android:layout_marginTop="15dp"
                        >
                        <com.smw.common.views.MediumTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="参与签署的用户"
                            android:textColor="@color/common_text_main"
                            android:textSize="16sp"
                            />
                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/rv_user"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            />

                    </com.cy.necessaryview.shapeview.RecShapeLinearLayout>

                    <com.cy.necessaryview.shapeview.RecShapeLinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        app:colorFill="@color/common_white"
                        app:radiusCorner="8dp"
                        android:paddingLeft="12dp"
                        android:paddingRight="12dp"
                        android:paddingTop="20dp"
                        android:paddingBottom="20dp"
                        android:layout_marginTop="10dp"
                        >
                        <com.smw.common.views.MediumTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="需要签署的文件"
                            android:textColor="@color/common_text_main"
                            android:textSize="16sp"
                            />
                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/rv_template"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            />

                    </com.cy.necessaryview.shapeview.RecShapeLinearLayout>

                </LinearLayout>

            </androidx.core.widget.NestedScrollView>
        </FrameLayout>
    </LinearLayout>

</layout>